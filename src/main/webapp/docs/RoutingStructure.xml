<routes>
    <route>
        <routeName>theRouteToIndex</routeName>
        <url>/users/index</url>
        <Controller>org.controllers.MyController</Controller>
        <action>allUsers</action>
        <args>
            <arg>
                <name>id</name>
                <type>Integer</type>
                <match>[0,9]</match>
            </arg>
            <arg>
                <name>name</name>
                <type>String</type>
                <match></match>
            </arg>
        </args>
    </route>
    <route>
        <routeName>theRouteToAddUser</routeName>
        <url>/users/add</url>
        <Controller>org.controllers.AnotherController</Controller>
        <action>allUsers</action>
        <args>
            <arg>
                <name>id</name>
                <type>Long</type>
            </arg>             
        </args>
    </route>
</routes>
